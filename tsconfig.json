{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "target": "es5",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": ["es2015", "es2017", "dom"],
      "outDir": "./lib"
    },
    "exclude": [
      "node_modules",
      "bundles",
      "coverage",
      "build"
    ]
}  